{
  "manifest_version": 3,
  "name": "CommandBar Pro",
  "version": "1.2.0",
  "description": "Advanced Command Bar for Chrome inspired by Arc Browser",
  "permissions": [
    "tabs",
    "bookmarks", 
    "history",
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["i18n.js", "content.js"],
      "css": ["styles.css"]
    }
  ],
  "commands": {
    "toggle_commandbar": {
      "suggested_key": {
        "default": "Ctrl+K",
        "mac": "Command+K"
      },
      "description": "Open Command Bar"
    },
    "edit_current_url": {
      "suggested_key": {
        "default": "Ctrl+Shift+K",
        "mac": "Command+Shift+K"
      },
      "description": "Edit Current URL"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "CommandBar Pro",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.svg",
      "48": "icons/icon48.svg",
      "128": "icons/icon128.svg"
    }
  },
  "options_page": "options.html",
  "web_accessible_resources": [
    {
      "resources": ["styles.css"],
      "matches": ["<all_urls>"]
    }
  ]
} 